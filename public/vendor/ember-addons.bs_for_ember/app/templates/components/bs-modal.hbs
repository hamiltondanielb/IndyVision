<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">
                {{#if titleIconClasses}}
                    <i {{bind-attr class="titleIconClasses"}}></i>
                {{/if}}
                {{{title}}}
            </h4>
        </div>
        <div class="modal-body">
            {{#if body}}
                {{view view.body}}
            {{else}}
                {{yield}}
            {{/if}}
        </div>
        <div class="modal-footer">
            {{#each footerButtons}}
                {{bs-button content=this targetObjectBinding="view.targetObject"}}
            {{/each}}
            {{#each footerViews}}
                {{view this}}
            {{/each}}
        </div>
    </div>
</div>